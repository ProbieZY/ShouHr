@model BlueHrLib.Data.Company
@using BlueHrWeb.Helpers.View
@{ 
    bool canDeleted = MenuAuthHelper.CanShow("Company", "Deleted");
}
<input type="hidden" id="can" value="@canDeleted.ToString()">
<div id="company" style="margin:20px;">
    <ol class="breadcrumb current-position">
        您的位置：
        <li>@Html.ActionLink("校区信息", "Index")</li>
        <li>{{action}}</li>
    </ol>

    <hr class="hr-grey" />

    <input type="hidden" id="error_info" value="@ViewBag.ErrorMsg" />

    @using (Ajax.BeginForm(new AjaxOptions { HttpMethod = "Post", OnSuccess = "Success" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        if (Model != null)
        {
            @Html.HiddenFor(model => model.id)
        }

        <div class="marco-npanel-primary">
            <div class="marco-nheading">
                {{action}}

                <div class="pull-right">
                    <button type="submit" class="marco-btn-primary" style="margin-top:-10px; padding: 0 10px;background:#c0392b">
                        <i class="fa fa-check-circle-o"></i>
                        <span>{{actionBtn}}</span>
                    </button>
                </div>
            </div>

            <div class="marco-nbody row">
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="marco-igroup-primary">
                        <span>名称</span>
                        @if (Model != null)
                        {
                            @Html.EditorFor(model => model.name)
                        }
                        else
                        {
                            <input type="text" name="name" placeholder="名称" />
                        }
                    </div>
                </div>
            </div>
            <div class="marco-nbody row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="marco-textarea">
                        <label for="address" style="padding:3px 10px; height: 35px; margin-bottom: -2px;">校区地址</label>
                        @if (Model != null)
                        {
                            @Html.TextAreaFor(model => model.address)
                        }
                        else
                        {
                            <textarea name="address" placeholder="校区地址"></textarea>
                        }
                    </div>
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="marco-textarea">
                        <label for="remark" style="padding:3px 10px; height: 35px; margin-bottom: -2px;">备注</label>
                        @if (Model != null)
                        {
                            @Html.TextAreaFor(model => model.remark)
                        }
                        else
                        {
                            <textarea name="remark" placeholder="备注"></textarea>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script type="text/javascript">
    Layout.init();

    //控制textarea高度
    $('textarea').css({ height: ($(window).height() - 400) / 2 + 'px' });
    $(window).resize(function () {
        $('textarea').css({ height: ($(window).height() - 400) / 2 + 'px' });
    });

    if ($("#error_info").val() != "" && $("#error_info").val() != undefined) {
        Layout.popMsg("popMsg-danger", $("#error_info").val());
    }

</script>
